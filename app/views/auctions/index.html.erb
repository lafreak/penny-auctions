<div class="head">
	<h1>Auctions</h1>
	<%= link_to("Add auction", auctions_new_path, class: "btn btn-default") %> 
</div>
<br />
<div class="row">
	<% @auctions.each do |a| %>
		<div class="col-sm-6 col-md-4">
	    	<div class="thumbnail">
	    		<%= image_tag a.photo %>
	      		<div class="caption">
							<h3> <%= link_to(a.name, auctions_show_path(a)) %> </h3>
							<p> Current price: <%= number_to_currency(a.top_offer, :unit => '$') %></p>
							<p class="countdown"><%= a.finish_at.strftime('%b %d, %Y %H:%M:%S') %></p>
							<p><%= link_to("Bid", auctions_bid_path(a), class: "btn btn-primary btn-block") %></p>
	      		</div>
	    	</div>
		</div>
	<% end %>
</div>