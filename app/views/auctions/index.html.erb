<div class="head">
	<h1>Auctions</h1>
	<%= link_to("Add auction", auctions_new_path, class: "btn btn-default") %>
</div>
<div class="row">
	<% @auctions.each do |a| %>
		<div class="col-sm-6 col-md-4">
	    <div class="thumbnail">
	    	<%= image_tag "242x200.png" %>
	      <div class="caption">
	        <h3> <%= a.name %> </h3>
	        <p> Current price: $<%= a.price.to_f / 100 %> </p>
	        <p> Time left: <%=  (a.created_at.to_time + 3.day - Time.now).to_i %> seconds </p>
	        <p><a href="#" class="btn btn-primary btn-block" role="button">Bid</a></p>
	      </div>
	    </div>
		</div>
	<% end %>
</div>