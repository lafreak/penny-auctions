<h1>New auction</h1>

<%= form_for @auction, url: { action: "create" }, html: { class: "" } do |f| %>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br />
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <%= f.file_field :photo %>

  <%= f.submit "Create", class: 'btn btn-default' %>
<% end %>